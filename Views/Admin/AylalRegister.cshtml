@model TravelWeb.Models.ViewModel.AylalModel
@{
    ViewBag.Title = "Аялал бүртгэх";
    Layout = "~/Views/Shared/Dashboard.cshtml";
}

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header">Dashboard</h1>

    <div class="row placeholders">
        
    </div>
    @using (Html.BeginForm())
    {
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading"><h2 class="sub-header">Аялал бүртгэх</h2></div>
            <div class="panel-body">
                <div class="form-group">
                    <label style="color:red">@ViewBag.Message</label>
                    <label style="color:red">@ViewBag.ErrorMessage</label>
                </div>
                <div class="form-group col-lg-6">
                    <label for="ContractPerion">Аялалын нэр</label>
                    @Html.TextBoxFor(a => a.name, new { @class = "form-control" })
                </div>
                <div class="form-group col-lg-6">
                    <label for="ContractPerion">Аялалын чиглэл</label>
                    @Html.TextBoxFor(a => a.chiglel, new { @class = "form-control" })
                </div>
                <div class="form-group col-lg-6">
                    <label for="ContractPerion">Эхлэх огноо</label>
                    @Html.TextBoxFor(a => a.name, new { @class = "form-control", @type = "date" })
                </div>
                <div class="form-group col-lg-6">
                    <label for="ContractPerion">Дуусах огноо</label>
                    @Html.TextBoxFor(a => a.name, new { @class = "form-control", @type = "date" })
                </div>
                <div class="form-group col-lg-6">
                    <label for="ContractPerion">Хөтөч</label>
                    @Html.DropDownListFor(a => a.name, new SelectList(ViewBag.HutuchList, "Value", "Text"), new { @class = "form-control" })
                </div>
                <div class="form-group col-lg-6">
                    <label for="ContractPerion">Зураг</label>
                    @Html.TextBoxFor(a => a.name, new { @class = "form-control", @type = "file" })
                </div>
                <div class="form-group col-lg-12">
                    <label for="ContractPerion">Танилцуулга</label>
                    @Html.TextAreaFor(a => a.name, new { @class = "form-control", rows = "10" })
                </div>
                <div class="form-group col-lg-12">
                    <button class="btn btn-primary" type="submit">Бүртгэх</button>
                </div>
            </div>
        </div>

    </div>
    }
</div>
