@model TravelWeb.Models.medee
@{
    ViewBag.Title = "Мэдээ бүртгэх";
    Layout = "~/Views/Shared/Dashboard.cshtml";
}
<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header">Dashboard</h1>

    <div class="row placeholders">

    </div>
    @using (Html.BeginForm())
    {  <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading"><h2 class="sub-header">Мэдээ бүртгэх</h2></div>
            <div class="panel-body">
                    <div class="form-group">
                        <label style="color:red">@ViewBag.Message</label>
                        <label style="color:red">@ViewBag.ErrorMessage</label>
                    </div>
                <div class="form-group col-lg-6">
                    <label for="ContractPerion">Зураг</label>
                    @Html.TextBoxFor(a => a.zurag, new { @class = "form-control", @type = "file" })
                </div>
                <div class="form-group col-lg-12">
                    <label for="ContractPerion">Танилцуулга</label>
                    @Html.TextAreaFor(a => a.text, new { @class = "form-control", rows = "10" })
                </div>
                <div class="form-group col-lg-12">
                    <button class="btn btn-primary" type="submit">Бүртгэх</button>
                </div>
                </div>
            </div>
            </div>
            }
      </div>
