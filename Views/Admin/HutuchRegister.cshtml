@model TravelWeb.Models.ViewModel.HutuchModel
@{
    ViewBag.Title = "Хөтөч бүртгэх";
    Layout = "~/Views/Shared/Dashboard.cshtml";
}



<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header">Dashboard</h1>

    <div class="row placeholders">

    </div>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading"><h2 class="sub-header">Хөтөч бүртгэх</h2></div>
            <div class="panel-body">
                <div class="form-group">
                    <div class="alert-success">@ViewBag.Message</div>
                    <div class="alert-danger">@ViewBag.ErrorMessage</div>
                </div>
                <div class="form-group col-lg-6">
                    <label for="ContractPerion">Хөтөчийн нэр</label>
                    @Html.TextBoxFor(a => a.name, new { @class = "form-control" })
                    @Html.HiddenFor(a => a.hutuchId)
                </div>
                <div class="form-group col-lg-6">
                    <label for="ContractPerion">Мэйл хаяг</label>
                    @Html.TextBoxFor(a => a.email, new { @class = "form-control" })
                </div>
                <div class="form-group col-lg-6">
                    <label for="ContractPerion">Регистерийн дугаар</label>
                    @Html.TextBoxFor(a => a.registerNo, new { @class = "form-control" })
                </div>
                <div class="form-group col-lg-6">
                    <label for="ContractPerion">Утас</label>
                    @Html.TextBoxFor(a => a.phone, new { @class = "form-control" })
                </div>
                <div class="form-group col-lg-6">
                    <label for="ContractPerion">Нууц үг</label>
                    @Html.TextBoxFor(a => a.password, new { @class = "form-control", @type = "password" })
                </div>
                <div class="form-group col-lg-6">
                    <label for="ContractPerion">Хаяг</label>
                    @Html.TextBoxFor(a => a.address, new { @class = "form-control" })
                </div>
                <div class="form-group col-lg-6">
                    <label for="ContractPerion">Хүйс</label>
                
                    @Html.DropDownListFor(a => a.gender, new List<SelectListItem> {
                    new SelectListItem { Text="Эрэгтэй", Value="0" },
                    new SelectListItem { Text="Эмэгтэй", Value="1" }
                }, new { @class = "form-control" })
                        
                </div>
                <div class="form-group col-lg-6">
                    <label for="ContractPerion">Төрсөн өдөр</label>
                    @Html.TextBoxFor(a => a.birthDate, new { @class = "form-control", @type = "date" })
                </div>
                <div class="form-group col-lg-12">
                    <button class="btn btn-primary" type="submit">Бүртгэх</button>
                </div>
            </div>
        </div>

    </div>
}
</div>