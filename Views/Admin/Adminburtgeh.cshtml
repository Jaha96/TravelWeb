@model TravelWeb.Models.Adminburtgeh
@{
    ViewBag.Title = "Админ бүртгэх";
    Layout = "~/Views/Shared/Dashboard.cshtml";
}
<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header">Dashboard</h1>

    <div class="row placeholders">

    </div>
    @using (Html.BeginForm())
    {  <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading"><h2 class="sub-header">Админ бүртгэх</h2></div>
            <div class="panel-body">
                <div class="form-group">
                    <label style="color:red">@ViewBag.Message</label>
                    <label style="color:red">@ViewBag.ErrorMessage</label>
                </div>

                <div class="form-group col-lg-6">
                    <label for="ContractPerion">Админ нэр</label>
                    @Html.TextBoxFor(a => a.name, new { @class = "form-control" })
                    @Html.HiddenFor(a => a.name)
                </div>
                <div class="form-group col-lg-6">
                    <label for="ContractPerion">Мэйл хаяг</label>
                    @Html.TextBoxFor(a => a.email, new { @class = "form-control" })
                </div>
                <div class="form-group col-lg-6">
                <label for="ContractPerion">Нууц үг</label>
                @Html.TextBoxFor(a => a.password, new { @class = "form-control", @type = "password" })
            </div>
            <div class="form-group col-lg-6">
                <label for="ContractPerion">Утас</label>
                @Html.TextBoxFor(a => a.phone, new { @class = "form-control" })
            </div>
                <div class="form-group col-lg-12">
                    <button class="btn btn-primary" type="submit">Бүртгэх</button>
                </div>
            </div>
        </div>
    </div>
    }
</div>
